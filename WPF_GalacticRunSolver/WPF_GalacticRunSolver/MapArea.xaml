<Window x:Class="WPF_GalacticRunSolver.MapArea"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_GalacticRunSolver"
        mc:Ignorable="d"
        Title="MapArea" Height="518" Width="952"
        WindowStyle="None"
        WindowState="Maximized"
        ShowInTaskbar="False"
        AllowsTransparency="True"
        Background="Transparent">
    <Grid>
        <Rectangle x:Name="Selection" Stroke="Red" StrokeThickness="4"></Rectangle>
        <Canvas x:Name="Background" MouseDown="On_Click" MouseMove="On_Move" Background="White" Opacity="0.1"></Canvas>
    </Grid>
</Window>

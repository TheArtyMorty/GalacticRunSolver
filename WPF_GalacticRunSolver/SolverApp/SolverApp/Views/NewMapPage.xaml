<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SolverApp.Views.NewMapPage"
             BackgroundImageSource="Background.png"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>

            <Frame Grid.Row="0" BackgroundColor="#15FFFFFF" CornerRadius="25" VerticalOptions="Center" HeightRequest="200">
                <Grid x:Name="ExportImportSection">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Text="Map Export/Import" VerticalOptions="Center" HorizontalOptions="Center" FontSize="Large" FontAttributes="Bold" TextColor="White"/>
                    <Button Text="Save Map" Clicked="SaveMap" Margin="5" CornerRadius="5" Grid.Row="1" VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="150"/>
                    <Button Text="Load Map" Clicked="LoadMap" Margin="5" CornerRadius="5" Grid.Row="2" VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="150"/>
                </Grid>
            </Frame>

            <Frame Grid.Row="1" BackgroundColor="#15FFFFFF" CornerRadius="25" VerticalOptions="Center" HeightRequest="200">
                <Grid x:Name="NewMapSection">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Text="Create New Map" VerticalOptions="Center" HorizontalOptions="Center" FontSize="Large" FontAttributes="Bold" TextColor="White"/>
                    <Grid Grid.Row="1" Margin="5,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Label Text="Map size : " TextColor="White" Grid.Column="0" VerticalTextAlignment="Center" FontSize="Large" HorizontalTextAlignment="Left"/>
                        <Picker x:Name="SizePicker" Grid.Column="1" BackgroundColor="White" Margin="5" SelectedIndex="0" SelectedIndexChanged="OnMapSizeChanged">
                            <Picker.Items>
                                <x:String>Small</x:String>
                                <x:String>Normal</x:String>
                                <x:String>Custom</x:String>
                            </Picker.Items>
                        </Picker>
                        <Entry x:Name="CustomSize" Text="12" Keyboard="Numeric" Grid.Column="2" BackgroundColor="White" Margin="5"></Entry>
                    </Grid>
                    <Grid Grid.Row="2" Margin="5,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <Label Text="Robot Number : " TextColor="White" Grid.Column="0" VerticalTextAlignment="Center" FontSize="Large" HorizontalTextAlignment="Left"/>
                        <Picker x:Name="RobotCountPicker" Grid.Column="1" BackgroundColor="White" Margin="5" SelectedIndex="2">
                            <Picker.Items>
                                <x:String>2</x:String>
                                <x:String>3</x:String>
                                <x:String>4</x:String>
                                <x:String>5</x:String>
                            </Picker.Items>
                        </Picker>
                    </Grid>
                    <Button Text="Create Map" Clicked="CreateMap" Margin="5" CornerRadius="5" Grid.Row="3"  VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="150"/>
                </Grid>
            </Frame>
        </Grid>
    </ContentPage.Content>
</ContentPage>
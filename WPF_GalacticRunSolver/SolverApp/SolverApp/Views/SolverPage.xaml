<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SolverApp.Views.SolverPage"
             xmlns:controls="clr-namespace:SolverApp.Views.Controls"
             xmlns:local="clr-namespace:SolverApp"
             BackgroundImageSource="Background.png"
             NavigationPage.HasNavigationBar="False">
    
    <Grid Margin="{Binding Source={x:Static local:App.Margin}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>

        <controls:MapControl x:Name="TheMapControl" BindingContext="{Binding theMap}" Grid.Row="0"/>
        
        <!--<ScrollView Orientation="Both" Grid.Row="0">
            <controls:MapControl x:Name="TheMapControl" BindingContext="{Binding theMap}"/>
        </ScrollView>-->

        <StackLayout x:Name="SolverArea" Grid.Row="1" Orientation="Vertical">
            <Button Text="{Binding _SolveButtonText}" Command="{Binding _SolveMap}" IsEnabled="{Binding _SolveButtonEnabled}"/>

            <ScrollView Orientation="Vertical">
                <StackLayout Orientation="Vertical">
                <StackLayout x:Name="SolutionsArea"
                            Orientation="Vertical"
                            BindableLayout.ItemsSource="{Binding _Solutions}">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <controls:SolutionControl/>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </StackLayout>

                <Label Text="{Binding _Log}" TextColor="White" Margin="10"/>
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </Grid>

</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SolverApp.Views.SolverPage"
             xmlns:controls="clr-namespace:SolverApp.Views.Controls"
             xmlns:local="clr-namespace:MauiSolverApp"
             xmlns:ctrls="clr-namespace:SolverApp.Views.Controls"
             BackgroundImageSource="background.png"
             x:Name="TheSolverPage"
             NavigationPage.HasNavigationBar="False">
    
    <Grid Margin="{Binding Source={x:Static local:App.Margin}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
            </Grid.ColumnDefinitions>

            <Label Text="Edit Mode " TextColor="White" HorizontalOptions="End" VerticalOptions="Center" Margin="10" Grid.Column="1"/>
            <Switch x:Name="SwitchMode" Toggled="Switch_Toggled" HorizontalOptions="Center" VerticalOptions="Center" Grid.Column="2" />
            <Label Text="Solver" TextColor="White" HorizontalOptions="Start" VerticalOptions="Center" Margin="10" Grid.Column="3"/>
        </Grid>

        <Grid Grid.Row="1" BackgroundColor="#10FFFFFF">
            <Frame Margin="0" CornerRadius="0" Padding="0" BackgroundColor="Transparent">
                <ctrls:PanPinchContainer x:Name="MainPanPinch">
                    <Grid>
                        <Image Source="{Binding _backgroundPhoto}" Opacity="0.4"/>
                        <controls:MapControl x:Name="TheMapControl" BindingContext="{Binding theMap}"/>
                    </Grid>
                </ctrls:PanPinchContainer>
            </Frame>
        </Grid>

        <Grid Grid.Row="1" IsVisible="{Binding _PanEnabled}">
            <Frame Margin="0" CornerRadius="0" Padding="0" BackgroundColor="Transparent">
                <ctrls:FakePanPinchContainer x:Name="FakePanPinch">
                    <Rectangle Fill="#11111111"/>
                </ctrls:FakePanPinchContainer>
            </Frame>
        </Grid>

        <ScrollView Orientation="Vertical" Grid.Row="2" Margin="5" IsVisible="{Binding _SolverModeOff}">
            <StackLayout x:Name="EditModeArea" Padding="5"  Orientation="Vertical">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                    </Grid.ColumnDefinitions>

                    <Label Text="Pan Mode :    On " TextColor="White" HorizontalOptions="End" VerticalOptions="Center" Margin="10" Grid.Column="1"/>
                    <Switch x:Name="PanMode" Toggled="PanMode_Toggled" HorizontalOptions="Center" VerticalOptions="Center" Grid.Column="2" />
                    <Label Text=" Off" TextColor="White" HorizontalOptions="Start" VerticalOptions="Center" Margin="10" Grid.Column="3"/>
                </Grid>
                <HorizontalStackLayout Margin="5">
                    <CheckBox CheckedChanged="CheckBox_CheckedChanged" />
                    <Label Text=" Allow placing custom walls." TextColor="White" HorizontalOptions="End" VerticalOptions="Center" Margin="10" />
                </HorizontalStackLayout>
                <HorizontalStackLayout Margin="5">
                    <CheckBox CheckedChanged="AdditionalRobot_checkedChanged" />
                    <Label Text=" Use 5th robot." TextColor="White" HorizontalOptions="End" VerticalOptions="Center" Margin="10" />
                </HorizontalStackLayout>
                <HorizontalStackLayout Margin="5">
                    <CheckBox x:Name="CheckCustomMapSize" CheckedChanged="CustomMapSize_checkedChanged" />
                    <Label Text=" Custom map size." TextColor="White" HorizontalOptions="End" VerticalOptions="Center" Margin="10" />
                </HorizontalStackLayout>
                <HorizontalStackLayout Margin="5" x:Name="CustomMapSize" IsVisible="False">
                    <Label Text="Custom size : " TextColor="White" HorizontalOptions="End" VerticalOptions="Center" Margin="10" />
                    <Label x:Name="MapSize" Text="16" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" Margin="10" WidthRequest="35"/>
                    <Stepper x:Name="MapSizeStepper" VerticalOptions="Center" Minimum="8" Maximum="20" Value="16" ValueChanged="Stepper_ValueChanged" Increment="1" Margin="10" WidthRequest="150" />
                </HorizontalStackLayout>
                <VerticalStackLayout IsVisible="{Binding _QuadrantModeVisible}">
                    <Picker x:Name="BoardEdition" BackgroundColor="White" Margin="5" SelectedIndex="0" SelectedIndexChanged="BoardEdition_SelectedIndexChanged">
                        <Picker.Items>
                            <x:String>1st/3rd Edition (Red Box)</x:String>
                            <x:String>2nd Edition (Blue Box)</x:String>
                        </Picker.Items>
                    </Picker>
                    <HorizontalStackLayout BackgroundColor="#11ffffff">
                        <Label Text="Top Left :" WidthRequest="100" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center"/>
                        <Label x:Name="TopLeftBoard" Text="Board 1" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" Margin="10" WidthRequest="75"/>
                        <Stepper x:Name="TopLeftStepper" VerticalOptions="Center" Minimum="1" Maximum="8" Value="1" ValueChanged="TopLeftStepper_ValueChanged" Increment="1" Margin="10" WidthRequest="100" />
                    </HorizontalStackLayout>
                    <HorizontalStackLayout BackgroundColor="#11ffffff">
                        <Label Text="Top Right :" WidthRequest="100" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center"/>
                        <Label x:Name="TopRightBoard" Text="Board 1" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" Margin="10" WidthRequest="75"/>
                        <Stepper x:Name="TopRightStepper" VerticalOptions="Center" Minimum="1" Maximum="8" Value="1" ValueChanged="TopRightStepper_ValueChanged" Increment="1" Margin="10" WidthRequest="100" />
                    </HorizontalStackLayout>
                    <HorizontalStackLayout BackgroundColor="#11ffffff">
                        <Label Text="Bottom Left :" WidthRequest="100" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center"/>
                        <Label x:Name="BottomLeftBoard" Text="Board 1" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" Margin="10" WidthRequest="75"/>
                        <Stepper x:Name="BottomLeftStepper" VerticalOptions="Center" Minimum="1" Maximum="8" Value="1" ValueChanged="BottomLeftStepper_ValueChanged" Increment="1" Margin="10" WidthRequest="100" />
                    </HorizontalStackLayout>
                    <HorizontalStackLayout BackgroundColor="#11ffffff">
                        <Label Text="Bottom Right :" WidthRequest="100" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center"/>
                        <Label x:Name="BottomRightBoard" Text="Board 1" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" Margin="10" WidthRequest="75"/>
                        <Stepper x:Name="BottomRightStepper" VerticalOptions="Center" Minimum="1" Maximum="8" Value="1" ValueChanged="BottomRightStepper_ValueChanged" Increment="1" Margin="10" WidthRequest="100" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
                <Button Text="Reset ALL walls" Command="{Binding _ResetWalls}" Margin="5" WidthRequest="150" HorizontalOptions="Start"/>
                <Button Text="Save Map" Clicked="SaveMap" Margin="5" CornerRadius="5" VerticalOptions="Center" HorizontalOptions="Start" WidthRequest="150"/>
                <Button Text="Load Map" Clicked="LoadMap" Margin="5" CornerRadius="5" VerticalOptions="Center" HorizontalOptions="Start" WidthRequest="150"/>
            </StackLayout>
        </ScrollView>

        <ScrollView Orientation="Vertical" Grid.Row="2" Margin="5" IsVisible="{Binding _SolverModeOn}">
            <StackLayout x:Name="SolverArea" Grid.Row="2" Orientation="Vertical" Margin="5">
                <Button Text="{Binding _SolveButtonText}" Command="{Binding _SolveMap}" IsEnabled="{Binding _SolveButtonEnabled}" HorizontalOptions="Center" WidthRequest="150"/>
                <StackLayout Orientation="Vertical">
                    <StackLayout x:Name="SolutionsArea"
                                Orientation="Vertical"
                                BindableLayout.ItemsSource="{Binding _Solutions}">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate>
                                <controls:SolutionControl Margin="2"/>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </StackLayout>
                    <Label Text="{Binding _Log}" TextColor="White" Margin="10"/>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </Grid>

</ContentPage>

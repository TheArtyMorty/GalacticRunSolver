<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui;assembly=SkiaSharp.Views.Maui.Core"
             xmlns:skia_controls="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             xmlns:views="clr-namespace:SolverApp.Views"
             xmlns:ctrls="clr-namespace:SolverApp.Views.Controls"
             x:Class="SolverApp.Views.Controls.AnglePickerDropArea">
    <ContentView.Content BackgroundColor="#20ffffff">
        <Frame Grid.Row="1" Margin="0" CornerRadius="0" Padding="0" BackgroundColor="Transparent">
            <ctrls:PanPinchContainer>
                <skia_controls:SKCanvasView x:Name="canvasView" PaintSurface="OnCanvasViewPaintSurface" />
            </ctrls:PanPinchContainer>
        </Frame>
    </ContentView.Content>
</ContentView>
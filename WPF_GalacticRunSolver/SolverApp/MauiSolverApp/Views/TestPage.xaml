<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiSolverApp.Views.TestPage"
             xmlns:ctrls="clr-namespace:SolverApp.Views.Controls"
             Title="TestPage">
    <Grid x:Name="Helper" Margin="5" BackgroundColor="Green">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>

        <HorizontalStackLayout Grid.Row="0">
            <Button Text="Increase Size" Clicked="Button_Clicked"/>
        </HorizontalStackLayout>

        <ctrls:MapControl x:Name="TheMapControl" Grid.Row="1"/>

    </Grid>
</ContentPage>